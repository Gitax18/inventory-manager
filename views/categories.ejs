<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/categories.css">
</head>
<body>
    <%- include('includes/nav.ejs') %>
    <main>
        <% if (cts.length > 0) {%>
        <h1 class="primary-title">Your Categories</h1>
        <section class="container">
            <div class="cards">
                <% cts.forEach(ct => { %>
                <div class="card">
                        <div>
                            <h2 class="card-title"><%= ct.title %></h2>
                            <p class="card-desc"><%= ct.description %></h2>
                        </div>
                        <div class="card-buttons">
                            <a  href="/admin/edit-category/<%= ct.id %>?edit=true" id="edit-btn">Edit</a>
                            <form action="/admin/delete-category" method="post" class="form-del-req">
                                <input type="hidden" name="id" value="<%= ct.id %>">
                                <button id="del-btn" type="submit">Del</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
        <% } else { %>
            <section class="container-no-cats">
                <h1 class="primary-title">No Categories Found</h1>
                <p class="secondary-title">Please add categories <a href="/add-Category">here</a></p>
            </section>
            <% } %>

    </main>
</body>